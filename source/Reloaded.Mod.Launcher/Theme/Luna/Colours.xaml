<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- XOS Palette -->

    <!-- Text highlight colour -->
    <Color x:Key="AccentColorLightest">#b8c8ff</Color>  <!-- HSL: hsla(226, 100%, 86%, 1.00) -->

    <!-- + buttons -->
    <Color x:Key="AccentColorLighter">#8296d9</Color>   <!-- HSL: hsla(226, 53%, 68%, 1.00) -->

    <!-- Top bar and generic buttons -->
    <Color x:Key="AccentColorLight">#14286c</Color>     <!-- HSL: hsla(226, 69%, 25%, 1.00) -->

    <!-- Sidebar and hovered generic buttons -->
    <Color x:Key="AccentColor">#17244f</Color>          <!-- HSL: hsla(226, 55%, 20%, 1.00) -->

    <Color x:Key="AccentColorDark">#191f34</Color>      <!-- HSL: hsla(226, 35%, 15%, 1.00) -->
    <Color x:Key="AccentColorDarker">#101423</Color>    <!-- HSL: hsla(226, 37%, 10%, 1.00) -->
    <Color x:Key="AccentColorDarkest">#080a11</Color>   <!-- HSL: hsla(226, 36%, 5%, 1.00) -->

    <Color x:Key="LunaBlueLight">#245ADA</Color>
    <Color x:Key="LunaBlueLighter">#4590F0</Color>
    <Color x:Key="LunaBlueDark">#2963DD</Color>
    <Color x:Key="LunaBlueDarker">#1246AD</Color>

    <Color x:Key="LunaWinBtnLight">#90B8FF</Color>
    <Color x:Key="LunaWinBtnDark">#0445AF</Color>

    <Color x:Key="BackgroundColor">Transparent</Color>
    <Color x:Key="BorderColor">#CCCCCC</Color>

    <Color x:Key="ThirdlyTextColor">#DDDDDD</Color>
    <Color x:Key="PrimaryColor">#b8c8ff</Color>
    <Color x:Key="DarkPrimaryColor">#b8c8ff</Color>

    <!-- Need to reimport brushes for color changes to take effect. -->
    <SolidColorBrush x:Key="AccentColorLightestBrush" Color="{DynamicResource AccentColorLightest}"/>
    <SolidColorBrush x:Key="AccentColorLighterBrush" Color="{DynamicResource AccentColorLighter}"/>

    <LinearGradientBrush x:Key="AccentColorLightBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{DynamicResource LunaBlueLighter}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource LunaBlueLight}" Offset="0.2"/>
        <GradientStop Color="{DynamicResource LunaBlueDark}" Offset="0.9"/>
        <GradientStop Color="{DynamicResource LunaBlueDarker}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentColorBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource LunaBlueLighter}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource LunaBlueLight}" Offset="0.2"/>
        <GradientStop Color="{DynamicResource LunaBlueDark}" Offset="0.9"/>
        <GradientStop Color="{DynamicResource LunaBlueDarker}" Offset="1.0"/>
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="AccentColorBrushDark" StartPoint="1,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource LunaBlueLighter}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource LunaBlueLight}" Offset="0.2"/>
        <GradientStop Color="{DynamicResource LunaBlueDark}" Offset="0.9"/>
        <GradientStop Color="{DynamicResource LunaBlueDarker}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentColorBrushDarker" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{DynamicResource LunaBlueLighter}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource LunaBlueLight}" Offset="0.2"/>
        <GradientStop Color="{DynamicResource LunaBlueDark}" Offset="0.9"/>
        <GradientStop Color="{DynamicResource LunaBlueDarker}" Offset="1.0"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="AccentColorBrushDarkest" Color="{DynamicResource AccentColorDarkest}"/>

    <LinearGradientBrush x:Key="WindowControlButtonBgBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource LunaWinBtnLight}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource LunaWinBtnDark}" Offset="1.0"/>
    </LinearGradientBrush>

    <ImageBrush x:Key="BackgroundColorBrush" ImageSource="Images/bliss.jpg"/>
</ResourceDictionary>