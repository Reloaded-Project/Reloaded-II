<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- XOS Palette -->

    <!-- Text highlight colour -->
    <Color x:Key="AccentColorLightest">#9774be</Color>  <!-- HSL: hsla(268, 36%, 60%, 1.00) -->

    <!-- + buttons -->
    <Color x:Key="AccentColorLighter">#ffffff</Color>   <!-- HSL: hsla(268, 61%, 50%, 1.00) -->

    <!-- Top bar and generic buttons -->
    <Color x:Key="AccentColorLight">#3d146c</Color>     <!-- HSL: hsla(268, 69%, 25%, 1.00) -->

    <!-- Sidebar and hovered generic buttons -->
    <Color x:Key="AccentColor">#31174f</Color>          <!-- HSL: hsla(268, 55%, 20%, 1.00) -->

    <Color x:Key="AccentColorDark">#251934</Color>      <!-- HSL: hsla(267, 35%, 15%, 1.00) -->
    <Color x:Key="AccentColorDarker">#191023</Color>    <!-- HSL: hsla(268, 37%, 10%, 1.00) -->
    <Color x:Key="AccentColorDarkest">#0c0811</Color>   <!-- HSL: hsla(267, 36%, 5%, 1.00) -->

    <Color x:Key="MetalDark">#606057</Color>
    <Color x:Key="MetalLight">#888888</Color>
    <Color x:Key="MetalBlack">#000000</Color>
    <Color x:Key="MetalLightest">#D7D7D6</Color>
    <Color x:Key="MetalDarkest">#111111</Color>

    <!-- Need to reimport brushes for color changes to take effect. -->
    <SolidColorBrush x:Key="AccentColorLightestBrush" Color="{DynamicResource AccentColorLightest}"/>
    <SolidColorBrush x:Key="AccentColorLighterBrush" Color="{DynamicResource AccentColorLighter}"/>

    <LinearGradientBrush x:Key="AccentColorLightBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{DynamicResource MetalLightest}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="0.25"/>
        <GradientStop Color="{DynamicResource MetalDark}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="0.75"/>
        <GradientStop Color="{DynamicResource MetalDarkest}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentColorBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource MetalLightest}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="0.25"/>
        <GradientStop Color="{DynamicResource MetalDark}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="0.75"/>
        <GradientStop Color="{DynamicResource MetalDarkest}" Offset="1.0"/>
    </LinearGradientBrush>

    <!--<SolidColorBrush x:Key="AccentColorLightBrush" Color="{DynamicResource AccentColorLight}"/>-->
    <!--<SolidColorBrush x:Key="AccentColorBrush" Color="{DynamicResource AccentColor}"/>-->


    <LinearGradientBrush x:Key="AccentColorBrushDark" StartPoint="1,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource MetalLightest}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="0.25"/>
        <GradientStop Color="{DynamicResource MetalDark}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="0.75"/>
        <GradientStop Color="{DynamicResource MetalDarkest}" Offset="1.0"/>
    </LinearGradientBrush>

    <!--<SolidColorBrush x:Key="AccentColorBrushDark" Color="{DynamicResource AccentColorDark}"/>-->

    <LinearGradientBrush x:Key="AccentColorBrushDarker" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{DynamicResource MetalLightest}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="0.25"/>
        <GradientStop Color="{DynamicResource MetalDark}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource MetalLight}" Offset="1.0"/>
    </LinearGradientBrush>
    <!--<SolidColorBrush x:Key="AccentColorBrushDarker" Color="{DynamicResource AccentColorDarker}"/>-->
    <SolidColorBrush x:Key="AccentColorBrushDarkest" Color="{DynamicResource AccentColorDarkest}"/>

    <SolidColorBrush x:Key="WindowControlButtonBgBrush" Color="Black" Opacity="0.0"/>

</ResourceDictionary>